<div class="w-full md:w-3/4">
  <div class="container">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <caption class="p-5 text-lg font-semibold text-left rtl:text-right text-gray-900 bg-white dark:text-white dark:bg-gray-800">
              <%= t('cripto_coin') %>
              <p class="mt-1 text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= t('cripto_text') %>
              </p>
            </caption>
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="row" class="px-6 py-3">Moeda</th>
                    <th scope="row" class="px-6 py-3">Sigla</th>
                    <th scope="row" class="px-6 py-3">Ícone</th>
                    <th scope="row" class="px-6 py-3">Tipo de Mineração</th>
                    <th scope="row" class="px-6 py-3" rowspan="2"></th>
                </tr>
            </thead>
            <tbody>
              <% @coins.each do |coin| %>
                <tr class="border-b bg-gray-800 border-gray-700 hover:bg-gray-600">
                    <td class="px-6 py-2 font-medium whitespace-nowrap text-white">
                      <%= coin.description %>
                    </td>
                    <td class="px-6 py-2">
                      <%= coin.acronym %>
                    </td>
                    <td class="px-6 py-2">
                      <%= image_tag coin.url_image, alt: 'Imagem da moeda', size: '25x25', style: 'margin:0px;vertical-align:middle' %>
                    </td>
                    <td class="px-6 py-2">
                      <%= coin.mining_type.description %>
                    </td>
                    <td class="px-6 py-2 flex flex-col items-end">
                      <%= link_to t('show'), coin, class: "font-medium text-blue-600 hover:underline" %>
                      <%= link_to t('edit'), edit_coin_path(coin), class: "font-medium text-blue-600 hover:underline" %>
                    </td>
                </tr>
              <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
