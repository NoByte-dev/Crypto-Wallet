<p style="color: green"><%= notice %></p>

<h1>Moedas</h1>
<button><%= link_to t('new_coin'), new_coin_path %></button>
<button><%= link_to t('home'), root_path %></button>
<hr>
<table>
  <thead>
    <tr>
      <th>Moeada</th>
      <th>Sigla</th>
      <th>Ícone</th>
      <th>Tipo de mineração</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
    <tr style="text-align:center;margin:0px">
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td><%= image_tag coin.url_image, alt: 'Imagem da moeda', size: '25x25', style: 'margin:0px;vertical-align:middle' %></td>
      <td><%= coin.mining_type.description %></td>
      <td><%= link_to t('show'), coin %></td>
      <td><%= link_to t('edit'), edit_coin_path(coin) %></td>
      <td><%= link_to t('destroy'), coin, data: {'turbo-method': :delete, 'turbo-confirm': t('confirmation_msg')} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
