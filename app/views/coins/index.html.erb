<p style="color: green"><%= notice %></p>

<h1>Moedas</h1>
<button><%= link_to 'Cadastrar Moeda', new_coin_path %></button>
<button><%= link_to 'Home', root_path %></button>
<table>
  <thead>
    <tr>
      <th>Moeada</th>
      <th>Sigla</th>
      <th>√çcone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
    <tr style="text-align:center;margin:0px">
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td><%= image_tag coin.url_image, alt: 'Imagem da moeda', size: '25x25', style: 'margin:0px;vertical-align:middle' %></td>
      <td><%= link_to 'Exibir', coin %></td>
      <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
      <td><%= link_to 'Apagar', coin, data: {'turbo-method': :delete, 'turbo-confirm': 'Tem certeza?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
