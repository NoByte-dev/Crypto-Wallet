<%= render 'shared/notifications/form_errors', object: @coin %>
<%= form_with(model: coin) do |form| %>
  <div>
    <%= form.label :description, t('description'), style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :acronym, t('acronym'), style: "display: block" %>
    <%= form.text_field :acronym %>
  </div>

  <div>
    <%= form.label :url_image, t('url_image'), style: "display: block" %>
    <%= form.text_field :url_image %>
  </div>

  <div>
    <%= form.label :mining_type_id, t('mining_type'), style: 'display: block' %>
    <%#= form.select('mining_type_id', @all_mining_types, include_blank: 'Selecione...') %>
  </div>

  <div>
    <%= form.submit t('submit') %>
  </div>
<% end %>
