<div class="bg-cw-purple-900 p-4 flex justify-between items-center relative">
  <div class="flex items-center space-x-4">
    <%= link_to root_path do %>
      <%= image_tag 'logo.png', alt: 'Logo do site', class: 'rounded-full size-16 absolute top-3 left-3 shadow-lg hover:shadow-cw-purple-500/80 hover:brightness-[115%] ease-out duration-500' %>
    <% end %>
  </div>
  <div class="flex items-center space-x-4">
    <p class="text-white"><%= link_to t('.portuguese'), root_path(locale: 'pt-BR') %></p>
    <p class="text-white"><%= link_to t('.english'), root_path(locale: 'en-US') %></p>
    <p><%= locale_set_flag %></p>
  </div>
</div>
