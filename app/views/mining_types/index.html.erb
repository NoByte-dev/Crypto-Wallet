<div class="w-full flex mt-4 sm:px-4 justify-center">
  <div class="w-full sm:w-9/12 md:w-1/2 lg:w-1/3 xl:w-1/3">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-400">
              <caption class="bg-gray-800 p-5 text-left">
                <div class="flex flex-row justify-between items-center">
                  <p class="text-white text-lg font-semibold"><%= t('mining_type') %></p>
                  <button class="bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded"><%= link_to t('new_mining_type'), new_mining_type_path %></button>
                </div>
                <p class="mt-1 text-sm font-normal text-gray-400"> <%= t('mining_type_text') %></p>
              </caption>
            <thead class="text-xs uppercase bg-gray-700 text-gray-400">
                <tr>
                    <th scope="row" class="px-6 py-3">Nome</th>
                    <th scope="row" class="px-6 py-3">Sigla</th>
                    <th scope="row" class="px-6 py-3" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
              <% @mining_types.each do |mining_type| %>
                <tr class="border-b bg-gray-800 border-gray-700 hover:bg-gray-600">
                    <td class="px-6 py-2 font-medium whitespace-nowrap text-white">
                      <%= mining_type.description %>
                    </td>
                    <td class="px-6 py-2">
                      <%= mining_type.acronym %>
                    </td>
                    <td class="px-6 py-2 flex flex-col items-end">
                      <%= link_to t('show'), mining_type, class: "font-medium text-blue-600 hover:underline" %>
                      <%= link_to t('edit'), edit_mining_type_path(mining_type), class: "font-medium text-blue-600 hover:underline" %>
                    </td>
                </tr>
              <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
